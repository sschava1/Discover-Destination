<% include ../partials/header %>

    <div class = "container">
        <header class="jumbotron">
            <div class = "container">
                <h1>Welcome to Discover Destinations</h1>
                <p>View our hand-picked Destinations from all over the world</p>
                <p>
                    <a class = "btn btn-primary btn-lg" href = "/destinations/new">Add New Destination</a>
                </p>
            </div>
        </header>
        
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <%destinations.forEach(function(destination){%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= destination.image%>"/>
                    <div class="caption">
                        <h4><%=destination.name%></h4>
                    </div>
                    <p>
                        <a href="/destinations/<%= destination._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
            <%});%>   
        </div>
        
    </div>


<% include ../partials/footer %>